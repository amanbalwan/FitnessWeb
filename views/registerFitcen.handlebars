<form id="registration-form" action="/registerFitcen" method="POST">
  <label for="NameInput">First Name:</label>
  <input type="text" id="NameInput" name="NameInput" value="{{firstNameInput}}" />
  <br />

  <label for="emailInput">Email Address:</label>
  <input type="email" id="emailInput" name="emailInput" value="{{emailInput}}" />
  <br />
  <label for="phoneNumberInput">PhoneNumber:</label>
  <input type="number" id="phoneNumberInput" name="phoneNumberInput" value="{{phoneNumberInput}}" />
  <br />

  <label for="passwordInput">Password:</label>
  <input type="password" id="passwordInput" name="passwordInput" value="{{passwordInput}}" />
  <br />

  <label for="confirmPasswordInput">Confirm Password:</label>
  <input type="password" id="confirmPasswordInput" name="confirmPasswordInput" />
  <br />

  <label for="addressLine1Input">Address Line 1:</label>
  <input type="text" id="addressLine1Input" name="addressLine1Input" value="{{addressLine1Input}}" />
  <br />

  <label for="zipCodeInput">Zip Code:</label>
  <input type="text" id="zipCodeInput" name="zipCodeInput" value="{{zipCodeInput}}" />
  <br />
  <label for="activitiesInput">Activities:</label>
  <input type="text" id="activitiesInput" name="activitiesInput" value="{{activitiesInput}}" />
  <br />
  <label for="ratingInput">Rating:</label>
  <input type="number" id="ratingInput" name="ratingInput" value="{{ratingInput}}" />
  <br />

  <label for="roleInput">Role:</label>
  <select id="roleInput" name="roleInput">
 
    <option value="Fitcen">Fitcen</option>
  </select>
  <br />
  <div class="form-group" id="error-container">
    <div class="alert alert-danger text-goes-here">
    </div>
  </div>
  <div class="form-group">
    <button type="submit" id="btn_sub">Sign Up</button>
  </div>


</form>

<a href="/loginFitcen" id="a_for_login">Already have an account? Click here to log-in</a>
{{#if error}}
<p class="error">{{{error}}}</p>
{{/if}}
